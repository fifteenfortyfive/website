{% extends "layouts/main.html.j2" %}

{% block main %}
  <section class="section">
    <div class="container">
      <main class="content">
        <div class="columns is-centered">
          <div class="column is-8-tablet is-6-widescreen">
            <div class="box is-danger is-fullbleed">
              <div class="has-text-centered">
                <h1 class="title sign-up-header">Sign in</h1>
              </div>

              <form class="form is-isolated" action="/signin?redirect=/" method="POST">
                <div class="columns is-centered">
                  <div class="column is-10">
                    <div class="field">
                      <div class="control is-oneline is-rounded">
                        <label class="label">Username</label>
                        <input class="input" name="username" required="true">
                      </div>
                    </div>

                    <div class="field">
                      <div class="control is-oneline is-rounded has-icons-right">
                        <label class="label">Password</label>
                        <input class="input" type="password" name="password" required="true">
                        <span class="icon is-right has-text-danger">
                          <i class="fas fa-eye-slash"></i>
                        </span>
                      </div>
                    </div>

                    <input class="input button is-fullwidth is-danger is-rounded is-outlined" type="submit" value="Sign In">
                  </div>
                </div>
              </form>

              <p>
                Forget your password? Contact an event organizer
                <a href="{{conn.constants.discord_url}}" target="_blank" rel="nofollow noopener">on Discord</a>
                to have your password reset manually.
              </p>
            </div>
          </div>
        </div>
      </main>
    </div>
  </section>
{% endblock %}
